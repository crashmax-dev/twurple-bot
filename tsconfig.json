{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es2020",
    "declaration": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "declaration.d.ts"
  ],
  "ts-node": {
    "files": true
  }
}